<li>S</li>

  {% endblock %}


{% block content -%}

    <div class="container">

        {% for entity in entities %}
           <ul>
                <div style="margin:-5px;" class="span5">
          	<h4>{{ entity.title }}</h4>
		<div style="padding-right:10px;" class="pull-right">
		<a class="btn" href="{{ entity.link }}">View {{ entity.genre }}</a>
		</div>
                <h6>By {{ entity.author }}</h6>
 		<p>{% if entity.dateCreated %}{{ entity.dateCreated|date ('F jS, Y') }}{% endif %}</p>
                <p>{<i>{{ entity.blurb }}</i>}</p>
                <p>Posted on {% if entity.datePosted %}{{ entity.datePosted|date ('F jS, Y') }}{% endif %}</p>
<hr />
</div>
</ul>

<div class="row">
<div class="span12">		
                {% if is_granted('ROLE_ADMIN') %}

<ul>
                    <li>
                        <a href="{{ path('resource_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('resource_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
{% endif %}
</div>
</div>
{% endfor %}
{% if is_granted('ROLE_ADMIN') %}
        <ul>
        <li>
            <a href="{{ path('resource_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endif %}
</div>
    {% endblock %}
