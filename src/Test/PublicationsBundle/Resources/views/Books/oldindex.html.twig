{% block body -%}
    <h1>Books list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Pubyear</th>
                <th>Blurb</th>
                <th>Photurl</th>
                <th>Publisher</th>
                <th>Genre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{% if entity.photurl != '' %}<div class="featurette"><img .../><img src="{{entity.photurl}}" class="img-polaroid"></div>{%endif%}</td>
		<td><a href="{{ path('books_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{% if entity.pubyear %}{{ entity.pubyear|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.blurb }}</td>
                
                <td>{{ entity.publisher }}</td>
                <td>{{ entity.genre }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('books_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('books_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('books_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
